def show_book_info(book_id):
    if book_id in books:
        book = books[book_id]
        print("\n--- Book Information ---")
        print(f"Title       : {book['title']}")
        print(f"Author      : {book['author']}")
        print(f"Price       : {book['price']}")
        print(f"Description : {book['description']}")
        print(f"Launch Date : {book['launch_date']}")
    else:
        print("Invalid book ID.")

def main():
    while True:
        print("\nðŸ“š Press 1 for 101 book information")
        print("ðŸ“š Press 2 for 102 book information")
        print("ðŸ“š Press 3 for 103 book information")
        print("ðŸ“š Press 4 for 104 book information")
        print("ðŸ“š Press 5 for 105 book information")
        print("ðŸ“š Press 6 for 106 book information")

        choice = input("Enter your choice (1â€“6): ")

        book_ids = {
            "1": 101,
            "2": 102,
            "3": 103,
            "4": 104,
            "5": 105,
            "6": 106
        }

        if choice in book_ids:
            show_book_info(book_ids[choice])
        else:
            print("Invalid input. Please enter a number from 1 to 6.")

        cont = input("\nDo you want to continue? (Press 1 for Yes, 2 for No): ")
        if cont != "1":
            print("Thank you for using the book info system!")
            break

if __name__ == "__main__":
    main()

